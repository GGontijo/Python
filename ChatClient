import socket
import sys
import time

s = socket.socket()
host = input(str("Por favor, infome o host do servidor: "))
port = 8080
s.connect((host, port))
print("VocÃª estÃ¡ conectado ao servidor!")
while 1:
    incoming_message = s.recv(1024)
    incoming_message = incoming_message.decode()
    print(" Server : ", incoming_message)
    print("")
    message = input(str(">> "))
    message = message.encode()
    s.send(message)
    print("Mensagem enviada!...")
    print("")
