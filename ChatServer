import socket
import sys
import time

s = socket.socket()
host = socket.gethostname()
print("O Servidor irá iniciar em: ", host)
port = 8080
s.bind((host, port))
print("")
print("A Conexão entre servidor e host/port foi bem sucedida!")
print("")
print("Aguardando usuários...")
print("")
s.listen(1)
conn, addr = s.accept()
print(addr, "Se conectou ao servidor e está online ...")
print("")
while 1:
    message = input(str(">> "))
    message = message.encode()
    conn.send(message)
    print("Mensagem enviada!...")
    print("")
    incoming_message = conn.recv(1024)
    incoming_message = incoming_message.decode()
    print(" Client : ", incoming_message)
    print("")
